######################################################
RONN=ronn
TARGETS=malt-passwd.1.bz2 malt-webserver.1.bz2 malt.1.bz2 malt-passwd.1.html malt-webserver.1.html malt.1.html
RM=rm -f
BZIP2=bzip2

######################################################
all: $(TARGETS)

######################################################
clean:
	$(RM) $(TARGETS)

######################################################
%.1.bz2: %.ronn
	$(RONN) -r --pipe $< | $(BZIP2) > $@

######################################################
%.1.html: %.ronn
	$(RONN) -5 $<

######################################################
.PHONY: all clean