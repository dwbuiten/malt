#ifndef CONFIG_H
#define CONFIG_H

//select one of the spinlock mode
#cmakedefine MATT_PORTABILITY_SPINLOCK_PTHREAD
#cmakedefine MATT_PORTABILITY_SPINLOCK_DUMMY

//select one of the mutex mode
#cmakedefine MATT_PORTABILITY_MUTEX_PTHREAD
#cmakedefine MATT_PORTABILITY_MUTEX_DUMMY

//select one of the OS mode
#cmakedefine MATT_PORTABILITY_OS_UNIX

//select one of the compiler mode
#cmakedefine MATT_PORTABILITY_COMPILER_GNU

//Use code timing to help optimizing MATT code
#cmakedefine MATT_ENABLE_CODE_TIMING

#endif //CONFIG_H
